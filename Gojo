    <script>
        const quotes = [
            "Aku selalu ingin lebih kuat dari hari kemarin.",
            "Kekuatan sejati datang dari percaya pada dirimu sendiri.",
            "Jangan pernah takut menghadapi orang yang lebih kuat.",
            "Hidup ini singkat, jadi gunakan kekuatanmu dengan bijak.",
            "Jika ingin menang, kamu harus memahami kelemahan lawanmu.",
            "Kebebasan adalah hak setiap orang, bahkan bagi seorang penyihir.",
            "Jangan pernah menyerah, bahkan ketika segalanya tampak mustahil.",
            "Kadang dunia ini butuh sedikit kekacauan untuk menemukan keseimbangan.",
            "Kepercayaan diri adalah senjata paling mematikan.",
            "Aku tak akan menunggu dunia, aku akan mengubahnya sendiri."
        ];

        let currentIndex = 0;

        function nextQuote() {
            const quoteBox = document.getElementById("quoteBox");
            quoteBox.textContent = quotes[currentIndex];
            currentIndex = (currentIndex + 1) % quotes.length;
        }
    </script>
